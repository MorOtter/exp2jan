    <script>
      document.getElementById("submit").addEventListener("click", (event) => {
        // Get all input elements
        const allInputs = document.querySelectorAll("input");
        let questions = [];

        // Collect all unique question names
        allInputs.forEach((input) => {
          if (!questions.includes(input.name)) {
            questions.push(input.name);
          }
        });

        // Loop through each question
        for (let i = 0; i < questions.length; i++) {
          const questionName = questions[i];
          const questionInputs = document.getElementsByName(questionName);

          // Skip questions #9 and #11
          const questionNumber = parseInt(questionName.match(/\d+/)[0], 10);
          if (questionNumber === 9 || questionNumber === 11) {
            continue;
          }

          // Check if at least one option is selected for the question
          let isChecked = false;
          for (let j = 0; j < questionInputs.length; j++) {
            if (questionInputs[j].checked) {
              isChecked = true;
              break;
            }
          }

          // Show an alert and prevent form submission if no option is selected
          if (!isChecked) {
            window.alert(`Please respond to question number ${questionNumber}`);
            event.preventDefault();
            return; // Stop further checks after finding the first unanswered question
          }
        }
      });
    </script>
